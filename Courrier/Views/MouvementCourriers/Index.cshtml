</p>

<div>
    <h4>MouvementCourrier</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => Model.First().Status.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => Model.First().DatedeMouvement)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => Model.First().DatedeMouvement)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => Model.First().Receptioniste)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => Model.First().Courriers.Receptioniste.Nom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => Model.First().Courriers)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => Model.First().Courriers.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => Model.First().Coursier)
