        <dd class = "col-sm-10">
            @Html.DisplayFor(model => Model.First().Courriers.Coursier.Nom)
        </dd>
    </dl>
</div>
<div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatedeMouvement)
            </th>
  
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Status.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatedeMouvement)
            </td>
           
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        
                        
            </td>
        </tr>
}
            
    </tbody>
</table>
